{
  "name": "nutela-server",
  "version": "1.0.0",
  "description": "Lightweight update server for Electron apps",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json && yarn copy-views",
    "start": "node dist/src/index.js",
    "copy-views": "copyfiles -u 1 src/views/**.* dist/src/",
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --respawn --transpile-only --debug --exit-child --ignore-watch node_modules src/index.ts",
    "test": "jest",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "license": "MIT",
  "repository": "TipsGroup/nutela",
  "lint-staged": {
    "**/*.ts": [
      "eslint .",
      "yarn test",
      "git add"
    ]
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "date-fns": "3.6.0",
    "dotenv": "16.4.5",
    "express-useragent": "1.0.15",
    "fetch": "1.1.0",
    "finalhandler": "1.2.0",
    "handlebars": "4.7.8",
    "jest": "29.7.0",
    "micro": "10.0.1",
    "ms": "2.1.3",
    "node-fetch": "3.3.2",
    "router": "1.3.8",
    "semver": "7.6.2",
    "test-listen": "1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.6.0",
    "@types/async-retry": "1.4.8",
    "@types/express-useragent": "1.0.5",
    "@types/finalhandler": "1.2.3",
    "@types/jest": "29.5.12",
    "@types/ms": "0.7.34",
    "@types/semver": "7.5.8",
    "@types/test-listen": "1.1.2",
    "copyfiles": "2.4.1",
    "eslint": "8.x",
    "eslint-config-love": "54.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "globals": "15.8.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "ts-jest": "29.2.0",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.3"
  }
}
