{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2019"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "rootDir": ".",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots" : ["./node_modules/@types", "./src/@types"]
  },
  "files": [
    "declarations.d.ts"
  ],
  "include": ["src/*", "test/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
